// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Torneios {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(500)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Partidas  Partidas[]
}

model Jogadores {
  id              Int              @id @default(autoincrement())
  nome            String           @unique @db.VarChar(100)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  jogadores_times JogadoresTimes[]
  StatsPlayer     Stats[]
}

model Times {
  id              Int              @id @default(autoincrement())
  nome            String           @db.VarChar(100)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  jogadores_times JogadoresTimes[]
  timeA           Partidas[]       @relation("TeamOne")
  timeB           Partidas[]       @relation("TeamTwo")
  timeVencedor    Partidas[]       @relation("TeamWinner")
}

model JogadoresTimes {
  id         Int       @id @default(autoincrement())
  jogador    Jogadores @relation(fields: [jogador_id], references: [id])
  team       Times     @relation(fields: [time_id], references: [id])
  jogador_id Int
  time_id    Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Partidas {
  id               Int      @id @default(autoincrement())
  time_A           Times    @relation("TeamOne", fields: [time_A_id], references: [id])
  time_B           Times    @relation("TeamTwo", fields: [time_B_id], references: [id])
  time_vencedor    Times?   @relation("TeamWinner", fields: [time_vencedor_id], references: [id])
  torneio          Torneios @relation(fields: [torneio_id], references: [id])
  time_A_id        Int
  time_B_id        Int
  time_vencedor_id Int?
  torneio_id       Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  StatsPartida     Stats[]
}

model Stats {
  id           Int             @id @default(autoincrement())
  nome         String          @db.VarChar(100)
  jogador      Jogadores       @relation(fields: [jogador_id], references: [id])
  jogador_id   Int
  partida      Partidas        @relation(fields: [partida_id], references: [id])
  partida_id   Int
  categoria    CategoriasStats @relation(fields: [categoria_id], references: [id])
  categoria_id Int
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model CategoriasStats {
  id             Int      @id @default(autoincrement())
  nome           String   @db.VarChar(50)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  StatsCategoria Stats[]
}

model PartidaCansada {
  id                 Int      @id @default(autoincrement())
  segundos_restantes Int
  minutos_restantes  Int
  tempo24s           Int
  pontos_time_a      Int
  pontos_time_b      Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
